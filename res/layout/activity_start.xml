<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical|center_horizontal"
              android:background="@android:color/background_light" android:id="@+id/StartLayout"
              android:clickable="true">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="center|left" android:src="@drawable/success"
            android:clickable="true" android:onClick="start_Click"/>
</LinearLayout>

